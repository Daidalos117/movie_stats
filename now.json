{
  "version": 2,
  "env": {
    "MONGODB_URL": "@mongodb_url",
    "JWT_SECRET": "@jwt_secret",
    "PORT": "80"
  },
  "builds": [
    { "src": "be/bin/www", "use": "@now/node-server" },
    {
      "src": "fe/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "be/bin/www" },
    { "src": "/(.*)", "dest": "fe/$1" }
  ]
}
